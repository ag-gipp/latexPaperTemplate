#!/bin/bash
echo "Start travis jobs!"
mkdir rel
bin/arxiv &
bin/word &
bin/spellcheck &
echo "Wait for all jobs to finish"
wait
echo "Export release files"
cp preprint.pdf rel
cp preprint.log rel
cp arxiv.tar.gz rel
cp main.docx rel
cp spellcheck.html rel
if [[ -v CI ]]; then
	git clone git@github.com:ag-gipp/bibBotKey.git /tmp/bibkey
	api_key=$(< /tmp/bibkey/key)
fi